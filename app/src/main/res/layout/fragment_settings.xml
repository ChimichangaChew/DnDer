<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/currentUsernameTextView"
        app:layout_constraintBottom_toTopOf="@+id/newUsernameTextView"
        app:layout_constraintStart_toEndOf="@+id/profileLandscapeImageView"
        app:layout_constraintTop_toBottomOf="@+id/profileLandscapeTextView"
        app:layout_constraintVertical_bias="0.555"
        android:layout_width="121dp"
        android:layout_height="25dp"
        android:text="Current Username"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="91dp" />

    <EditText
        android:id="@+id/currentUsernameEditText"
        app:layout_constraintBottom_toTopOf="@+id/displayAgeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/newUsernameTextView"
        app:layout_constraintTop_toBottomOf="@+id/newUsernameEditText"
        android:layout_width="196dp"
        android:layout_height="28dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="91dp" />

    <TextView
        android:id="@+id/newUsernameTextView"
        app:layout_constraintBottom_toTopOf="@+id/ageTextView"
        app:layout_constraintStart_toEndOf="@+id/profileLandscapeImageView"
        app:layout_constraintTop_toBottomOf="@+id/profileLandscapeTextView"
        app:layout_constraintVertical_bias="0.824"
        android:layout_width="106dp"
        android:layout_height="25dp"
        android:text="New Username"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="141dp" />

    <EditText
        android:id="@+id/newUsernameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toEndOf="@+id/currentUsernameTextView"
        app:layout_constraintTop_toBottomOf="@+id/profileLandscapeTextView"
        android:layout_width="197dp"
        android:layout_height="27dp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="139dp" />

</androidx.constraintlayout.widget.ConstraintLayout>